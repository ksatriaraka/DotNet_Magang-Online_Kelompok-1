@{
    ViewData["Title"] = "Departemen Matematika";
}

<!-- Hero Section -->
<header class="hero-section text-center">
    <div class="container">
        <h1>Selamat Datang di</h1>
        <h2>DEPARTEMEN MATEMATIKA</h2>
        <button class="btn btn-primary mt-3" data-bs-toggle="modal" data-bs-target="#detailsModal">More Details</button>
    </div>
</header>

<!-- Modal Pop-Up -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">More Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Welcome to the Mathematics Department of Universitas Diponegoro. Here, we are committed to excellence in education and research, providing a supportive environment for students to grow and succeed.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>