@model IEnumerable<Departemen_Matematika.Models.Mahasiswa>

@{
    ViewData["Title"] = "Index";
}

<h1>LIST DATA MAHASISWA</h1>

<br>
<br />

<p>
    <a class="btn btn-primary" asp-action="Create">Add New</a>
</p>
<table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
        <tr class="text-center" style="background-color: lightcoral">
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NIM)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nama)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Join_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Graduation_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dosen_Wali)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fakultas_Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department_Code)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NIM)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nama)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Join_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Graduation_Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Dosen_Wali)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fakultas_Code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department_Code)
                </td>
                <td>
                    <a class="btn btn-primary" style="background-color: lightblue" asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.ID">Details</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>