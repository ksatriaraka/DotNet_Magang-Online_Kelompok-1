@model Departemen_Matematika.Models.Mahasiswa

@{
    ViewData["Title"] = "Delete Mahasiswa";
}

<h1>Delete Mahasiswa</h1>

<div class="text-danger">
    <h4>Are you sure you want to delete this data?</h4>
</div>

<hr />

<dl class="row">
    <dt class="col-sm-2">ID</dt>
    <dd class="col-sm-10">@Model.ID</dd>

    <dt class="col-sm-2">NIM</dt>
    <dd class="col-sm-10">@Model.NIM</dd>

    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Nama</dd>

    <dt class="col-sm-2">Gender</dt>
    <dd class="col-sm-10">@Model.Gender</dd>

    <dt class="col-sm-2">Telephone</dt>
    <dd class="col-sm-10">@Model.Telephone</dd>

    <dt class="col-sm-2">Address</dt>
    <dd class="col-sm-10">@Model.Address</dd>

    <dt class="col-sm-2">Join_Date</dt>
    <dd class="col-sm-10">@Model.Join_Date</dd>

    <dt class="col-sm-2">Graduation_Date</dt>
    <dd class="col-sm-10">@Model.Graduation_Date</dd>

    <dt class="col-sm-2">Dosen_Wali</dt>
    <dd class="col-sm-10">@Model.Dosen_Wali</dd>

    <dt class="col-sm-2">Fakultas_Code</dt>
    <dd class="col-sm-10">@Model.Fakultas_Code</dd>

    <dt class="col-sm-2">Department_Code</dt>
    <dd class="col-sm-10">@Model.Department_Code</dd>

</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="ID" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>